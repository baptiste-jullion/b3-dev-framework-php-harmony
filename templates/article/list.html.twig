{% extends 'base.html.twig' %}

{% block title %}Liste des articles!{% endblock %}

{% block body %}
    <div class="mx-auto container">
        <h1>Liste des articles</h1>
        <div class="grid grid-cols-3 gap-8">
            {% for article in articles %}
                <a
                        href="{{ path('app_article_by_slug', { 'slug': article.slug }) }}">
                    <article>
                        <img src="/covers/{{ article.cover }}.png" alt="" class="aspect-3/2 object-cover rounded-2xl">
                        <h2 class="mt-6 text-2xl font-bold mb-4">
                            {{ article.title }}
                        </h2>
                        <p>{{ article.content|markdown_to_html|striptags|u.truncate(128, '...', false) }}</p>
                    </article>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
